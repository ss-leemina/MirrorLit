<div class="reset-box">
  <h3>이메일로 비밀번호 변경하기</h3>

  <!-- 인증코드 발송 폼 -->
  <form action="/users/reset" method="POST">
    <label for="email">이메일</label>
    <input type="email" name="email" id="email" placeholder="이메일 입력" required>
    <button type="submit">인증코드 받기</button>
  </form>

  <!-- 인증코드 입력 검증 폼 -->
  <form action="/users/verify-code" method="POST">
    <input type="hidden" name="email" value="<%= typeof email !== 'undefined' ? email : '' %>">

    <label for="emailCode">인증코드</label>
    <input type="text" name="emailCode" id="emailCode" placeholder="인증코드 입력" required>
    <button type="submit">확인</button>
  </form>
</div>
