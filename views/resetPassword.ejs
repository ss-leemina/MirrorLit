<div class="auth-container">
  <div class="auth-box">
    <h2 class="auth-title">이메일로 비밀번호 변경</h2>

    <% if (messages && messages.error) { %>
      <div class="error-message">
        <%= messages.error[0] %>
      </div>
      <% } %>

        <% if (messages && messages.success) { %>
          <div class="success-message">
            <%= messages.success[0] %>
          </div>
          <% } %>

            <!-- 인증코드 발송 폼 -->
            <form action="/users/reset" method="POST" class="auth-form">
              <label for="email">이메일</label>
              <input type="email" name="email" id="email" placeholder="이메일 입력" required
                value="<%= typeof email !== 'undefined' ? email : '' %>">
              <button type="submit">인증코드 받기</button>
            </form>

            <!-- 인증코드 확인 폼 -->
            <form action="/users/verify-code" method="POST" class="auth-form">
              <input type="hidden" name="email" value="<%= typeof email !== 'undefined' ? email : '' %>">
              <label for="emailCode">인증코드</label>
              <input type="text" name="emailCode" id="emailCode" placeholder="인증코드 입력" required>
              <button type="submit">확인</button>
            </form>
  </div>
</div>