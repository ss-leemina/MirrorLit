<div class="auth-container">
  <div class="auth-box">
    <h2 class="auth-title">로그인</h2>

    <% if (flashMessages && flashMessages.success && flashMessages.success.length> 0) { %>
      <div class="success-message">
        <%= flashMessages.success[0] %>
      </div>
    <% } %>
    <% if (flashMessages && flashMessages.error && flashMessages.error.length> 0) { %>
        <div class="error-message">
            <%= flashMessages.error[0] %>
        </div>
    <% } %>

      <form action="/users/login" method="POST" class="auth-form">
        <input type="text" name="id" placeholder="ID" required>
        <input type="password" name="password" placeholder="Password" required>
        <button type="submit">로그인</button>
      </form>

      <form action="/users/new" method="GET" class="auth-form">
        <button type="submit" class="secondary">회원가입</button>
      </form>

        <div class="auth-footer">
          <a href="/users/reset-password">비밀번호를 잃어버리셨나요?</a>
        </div>
  </div>
</div>